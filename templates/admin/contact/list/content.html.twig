<section class="dashboard section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">
                {% include 'admin/partials/menu.html.twig' %}
            </div>
            <div class="col-lg-9 col-md-8 col-12">
                <div class="main-content">

                    <div class="dashboard-block mt-0">
                        <h3 class="block-title">Liste des contacts page</h3>

                        <nav class="list-nav">
                            <ul>
                                <li class="active">
                                    <a href="{{ path('app_contact_new') }}">Cr√©er un nouveau</a>
                                </li>
                            </ul>
                        </nav>

                        <div class="my-items">

                            <div class="item-list-title">
                                <div class="row align-items-center">
                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>Id</p>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-12">
                                        <p>Titre</p>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-12">
                                        <p>Description</p>
                                    </div>

                                    <div class="col-lg-2 col-md-2 col-12 align-right">
                                        <p>Actions</p>
                                    </div>
                                </div>
                            </div>

                            <div class="single-item-list">
                                {% for contact in contacts %}

                                <div class="row align-items-center mb-4 bg-light">

                                    <div class="col-lg-2 col-md-2 col-12">
                                        <p>{{ contact.id }}</p>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-12">
                                        <p>{{ contact.title }}</p>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-12">
                                        <p>{{ contact.description }}</p>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-12 align-right">
                                        <ul class="action-btn">
                                            <li>
                                                <a href="{{ path('app_contact_edit', {id: contact.id}) }}"><i class="lni lni-pencil"></i></a>
                                            </li>
                                            <li>
                                                <form method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                                                    <button class="btn"><i class="lni lni-trash"></i></button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>

                                </div>
                                {% endfor %}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>