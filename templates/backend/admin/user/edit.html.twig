{% extends 'backend/admin/base.html.twig' %}

{% block title 'Update user informations' %}

{# {% block body %}
    <h1>Edit User Informations</h1> #}



    




{% block body %}

    <div class="wrapper dashboard-wrapper">
        <div class="d-flex flex-wrap flex-xl-nowrap">
            {# Sidebar #}
                {% include 'backend/admin/sidebar.html.twig' %}
            {# EndSidebar #}

            <div class="page-content">
                    
                {# Header #}
                    {% include 'backend/admin/layouts/header.html.twig' %}
                {# EndHeader #}

                <main id="content" class="bg-gray-01">
                    <div class="px-3 px-lg-6 px-xxl-13 py-5 py-lg-10">
                        <div class="tab-content shadow-none p-0">
                            <div class="card-body py-4 py-md-0 px-0">
                                <div class="card mb-6">
                                    <div class="card-body p-6">
                                        <a href="{{ path('user_index') }}" class="btn btn-default">back to list</a>
                                        <h3 class="card-title mb-4 mt-4 text-heading fs-22 lh-15 text-center">
                                            Editer les informations de l'utilisateur
                                        </h3>
                                        
                                            {{ form_start(form) }}
                                                {{ form_row(form.firstname) }}
                                                {{ form_row(form.lastname) }}
                                                {{ form_row(form.avatar) }}
                                                {{ form_row(form.email) }}
                                                <button class="btn btn-indigo">Update</button>
                                            {{ form_end(form) }}


                                    </div>
                                </div>                                     
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

{% endblock %}


