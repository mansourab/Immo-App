<div class="dashboard-sidebar">
    <div class="user-image">
        {% if app.user %}
            <img src="{{ vich_uploader_asset(app.user) | imagine_filter('admin_user_avatar') }}" alt="#">
            <h3>{{ app.user.name}}
                <span><a href="#">{{ app.user.email }}</a></span>
            </h3>
        {% endif %}


    </div>
    <div class="dashboard-menu">
        <ul>
            <li>
                <a {% if route_name == "app_admin_index" %} class="active" {% endif %} 
                    href="{{ path('app_admin_index') }}"
                >
                    <i class="lni lni-dashboard"></i> Dashboard
                </a>
            </li>
            <li>
                <a {% if route_name == "app_property_new" %} class="active" {% endif %} href="{{ path('app_property_new') }}">
                    <i class="lni lni-circle-plus"></i> Ajouter une annonce
                </a>
            </li>
            
            <li>
                <a {% if route_name == "app_category_index" %} class="active" {% endif %} href="{{ path('app_category_index') }}">
                    <i class="lni lni-apartment"></i> Catégories
                </a>
            </li>
            <li>
                <a {% if route_name == "app_type_index" %} class="active" {% endif %} href="{{ path('app_type_index') }}">
                    <i class="lni lni-bolt-alt"></i> Types de bien
                </a>
            </li>
            <li>
                <a {% if route_name == "app_owner_index" %} class="active" {% endif %} href="{{ path('app_owner_index') }}">
                    <i class="lni lni-database"></i> Propriétaires
                </a>
            </li>
            <li>
                <a {% if route_name == "app_quarter_index" %} class="active" {% endif %} href="{{ path('app_quarter_index') }}">
                    <i class="lni lni-map-marker"></i> Les quartiers
                </a>
            </li>
            <li>
                <a {% if route_name == "app_state_index" %} class="active" {% endif %} href="{{ path('app_state_index') }}">
                    <i class="lni lni-map"></i> Les Régions
                </a>
            </li>
            <li>
                <a {% if route_name == "app_user_index" %} class="active" {% endif %} href="{{ path('app_user_index') }}">
                    <i class="lni lni-user"></i> Les Utilisateurs
                </a>
            </li>

            <li>
                <a {% if route_name == "app_annonce_inactive" %} class="active" {% endif %} href="{{ path('app_annonce_inactive') }}">
                    <i class="lni lni-lock"></i> Annonces Inactives
                </a>
            </li>
            <li>
                <a {% if route_name == "app_annonce_terminer" %} class="active" {% endif %} href="{{ path('app_annonce_terminer') }}">
                    <i class="lni lni-power-switch"></i> Annonces Terminées
                </a>
            </li>
            <li>
                <a {% if route_name == "app_annonce_annuler" %} class="active" {% endif %} href="{{ path('app_annonce_annuler') }}">
                    <i class="lni lni-cross-circle"></i> Annonces Annulées
                </a>
            </li>
            
        </ul>
        <div class="button">
            <a class="btn" href="{{ path('app_logout') }}">Logout</a>
        </div>
    </div>
</div>

