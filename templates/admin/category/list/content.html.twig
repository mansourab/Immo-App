<section class="dashboard section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-12">

                {% include 'admin/partials/menu.html.twig' %}

            </div>
            <div class="col-lg-9 col-md-8 col-12">
                <div class="main-content">

                    <div class="dashboard-block mt-0">
                        <h3 class="block-title">Catégories des annonces</h3>

                        <nav class="list-nav">
                            <ul>
                                <li class="active"><a href="#">Les catégories disponible <span>{{ categories | length }}</span></a></li>
                                <li class="align-right">
                                    <a href="{{ path('app_category_new') }}" class="btn">Ajouter un nouveau type</a>
                                </li>
                            </ul>
                        </nav>

                        <div class="my-items">

                            <div class="item-list-title">
                                <div class="row align-items-center">
                                    <div class="col-lg-3 col-md-2 col-12">
                                        <p>Id</p>
                                    </div>
                                    <div class="col-lg-4 col-md-5 col-12">
                                        <p>name</p>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-12 align-right">
                                        <p>Actions</p>
                                    </div>
                                </div>
                            </div>

                            <div class="single-item-list">
                                {% for category in categories %}

                                <div class="row align-items-center mb-4 bg-light">
                                    <div class="col-lg-3 col-md-2 col-12">
                                        <p>{{ category.id }}</p>
                                    </div>
                                    <div class="col-lg-4 col-md-5 col-12">
                                        <p>{{ category.name }}</p>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-12 align-right">
                                        <ul class="action-btn">
                                            <li><a href="{{ path('app_category_edit', {id: category.id}) }}"><i class="lni lni-pencil"></i></a></li>
                                            <li><a href="#"><i class="lni lni-trash-can"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>

                        </div>

                </div>
            </div>
        </div>
    </div>
</section>