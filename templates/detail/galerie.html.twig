<section>
    <div class="container">
        <div class="row galleries">
            {% for image in property.images %}

            <div class="col-sm-6 col-lg-4 mb-6">
                <div class="item item-size-4-3">
                    <div class="card p-0 hover-zoom-in">
                        <a href="{{ asset('uploads/galerie/'~image.url) }}" class="card-img" data-gtf-mfp="true" data-gallery-id="05" style="background-image:url('{{ asset('uploads/galerie/'~image.url) }}'); width: 100%; height: 100%;">
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
</section>