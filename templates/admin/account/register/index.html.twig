{% extends 'base.html.twig' %}

{% block title 'Créer un nouvel Utilisateur' %}

{% block body %}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Création de compte</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li>Register</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="login registration section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
                <div class="form-head">
                    <h4 class="title">Créer un compte</h4>
                    {{ form_start(form) }}
                    {{ form_row(form.name, {attr: {'class': 'form-style'}}) }}

                    {{ form_row(form.email, {attr: {'class': 'form-style'}}) }}
                    {{ form_row(form.plainPassword, {attr: {'class': 'form-style'}}) }}
                    {{ form_row(form.avatarFile, {attr: {'class': 'form-style'}}) }}
                    <div class="button mt-4">
                        <button class="btn">Créer mon compte</button>
                    </div>

                    <p class="outer-link">
                        Vous avez déja un compte? <a href="{{ path('app_login') }}">Se connecter</a>
                    </p>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}