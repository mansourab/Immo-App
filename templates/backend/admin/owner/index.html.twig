{% extends 'backend/admin/base.html.twig' %}

{% block title 'La liste des proprietaires' %}

{% block body %}

    <div class="wrapper dashboard-wrapper">
        <div class="d-flex flex-wrap flex-xl-nowrap">
            {# Sidebar #}
                {% include 'backend/admin/sidebar.html.twig' %}
            {# EndSidebar #}

            <div class="page-content">
                    
                {# Header #}
                    {% include 'backend/admin/layouts/header.html.twig' %}
                {# EndHeader #}

                <main id="content" class="bg-gray-01">
                    <div class="px-3 px-lg-6 px-xxl-13 py-5 py-lg-10">
                        <div class="tab-content shadow-none p-0">
                            <div class="card-body py-4 py-md-0 px-0">
                                <div class="card mb-6">
                                    <div class="card-body p-6">
                                        <div class="row">
                                        <div class="col-md-9">
                                            
                                        </div>
                                        <div class="col-md-3">
                                            <a href="{{path('app_owner_new')}}"class="btn btn-indigo mb-4">nouveau propriétaire</a>
                                        </div>
                                            
                                        </div>
                                        <h3 class="card-title mb-4 text-heading fs-22 lh-15">
                                            Tous les propriétaires
                                        </h3>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>Address</th>
                                                    <th>actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for owner in owners %}
                                                <tr>
                                                    <td>{{ owner.id }}</td>
                                                    <td>{{ owner.name }}</td>
                                                    <td>{{ owner.email }}</td>
                                                    <td>{{ owner.phone }}</td>
                                                    <td>{{ owner.address }}</td>
                                                    <td>
                                                        <a href="{{ path('app_owner_edit', {'id': owner.id}) }}" class="btn btn-link-indigo">edit</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="6">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                    </div>
                                </div>                                     
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

{% endblock %}