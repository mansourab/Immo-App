{% extends 'base.html.twig' %}

{% block body %}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Contact Us</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="index-2.html">Home</a></li>
                    <li>Contact</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section id="contact-us" class="contact-us section">
    <div class="container">
        <div class="contact-head wow fadeInUp" data-wow-delay=".4s">
            <div class="row">
                <div class="col-lg-5 col-12">
                    <div class="single-head">
                        {% for contact in contacts %}
                        <div class="contant-inner-title">

                            <h2 class="mb-4">Coordonnées & Localisation</h2>
{#                            <p>Pour le moment nous avons pas de lacal fixe mais vous pouvez nous joindre à n'importe quelle heure. voir nos contacts en dessous.</p>#}
                            <p>
                                {{ contact.description }}
                            </p>
                        </div>
                        <div class="single-info">
                            <h3>Heures de disponibilité</h3>
                            <ul>
                                <li>Jours Ouvrables: 10H – 18H</li>
                                <li>Week-ends: Fermé</li>
                            </ul>
                        </div>
                        <div class="single-info">
                            <h3>Contact infos</h3>
                            <ul>
                                <li>
                                    <span class="fw-bold">Adresse : </span> {{ contact.address }}
                                </li>

                                <li>
                                    <span class="fw-bold">Email : </span> {{ contact.email }}
                                </li>

                                <li>
                                    <span class="fw-bold">Téléphone : </span> {{ contact.phone1 }} / {{ contact.phone2 }} / {{ contact.phone3 }}
                                </li>
                            </ul>
                        </div>
                        <div class="single-info contact-social">
                            <h3>Réseaux sociaux</h3>
                            <ul>
                                <li><a href="{{ contact.facebook }}"><i class="lni lni-facebook-original"></i></a></li>
                                <li><a href="{{ contact.twitter }}"><i class="lni lni-twitter-original"></i></a></li>
                                <li><a href="{{ contact.linkedIn }}"><i class="lni lni-linkedin-original"></i></a></li>
                                <li><a href="{{ contact.whatsapp }}"><i class="lni lni-whatsapp"></i></a></li>
                            </ul>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-7 col-12">
                    <img src="{{ asset('static/image.jpg') }}" alt="" width="768" height="700">
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}