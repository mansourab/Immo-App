<div class="table-responsive">
	<table class="table table-hover bg-white border rounded-lg">
		<thead class="thead-sm thead-black">
			<tr>
				<th scope="col" class="border-top-0 px-6 pt-5 pb-4">Titre et Description</th>
				<th scope="col" class="border-top-0 pt-5 pb-4">Date de Cr√©ation</th>
				<th scope="col" class="border-top-0 pt-5 pb-4">Status</th>
				<th scope="col" class="border-top-0 pt-5 pb-4">Publier</th>
				<th scope="col" class="border-top-0 pt-5 pb-4">Actions</th>

			</tr>
		</thead>
		<tbody>
			{% for property in properties %}
			<tr class="shadow-hover-xs-2 bg-hover-white">
				<td class="align-middle pt-6 pb-4 px-6">
					<div class="media">
						<div class="w-120px mr-4 position-relative">
							<a href="single-property-1.html">
								<img src="{{ vich_uploader_asset(property) | imagine_filter('admin_property_thumb') }}" alt="property.title">
							</a>
							<span class="badge badge-{% if property.type == 'location'%}indigo{% else %}orange{% endif %} position-absolute pos-fixed-top">{{property.type}}</span>
						</div>
						<div class="media-body">
							<a href="single-property-1.html" class="text-dark hover-primary">
								<h5 class="fs-16 mb-0 lh-18">{{property.title}}</h5>
							</a>
								<p class="mb-1 font-weight-500">Niamey/{{property.quarter}}</p>
								<span class="text-heading lh-15 font-weight-bold fs-17">{{property.price | number_format(0, ',', '.')}}</span>
								{# <span class="text-gray-light">/month</span> #}
						</div>
					</div>
				</td>
				<td class="align-middle">{{property.createdAt | format_date}}</td>
				<td class="align-middle">
					<span class="badge text-capitalize font-weight-normal fs-12 badge-yellow">pending</span>
				</td>
				<td class="align-middle">
					<span class="badge text-capitalize font-weight-normal fs-12 badge-yellow">Publier</span>
				</td>
				<td class="align-middle">
					<a href="{{ path('app_property_edit', {id: property.id}) }}" data-toggle="tooltip" title="Edit" class="d-inline-block fs-18 text-muted hover-indigo mr-5">
						<i class="fal fa-pencil-alt"></i>
					</a>
					<a href="#" data-toggle="tooltip" title="Delete" class="d-inline-block fs-18 text-muted hover-indigo">
						<i class="fal fa-trash-alt"></i>
					</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>