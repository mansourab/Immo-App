{% extends 'backend/admin/base.html.twig' %}

{% block title 'Liste des catégories' %}

{% block body %}

    <div class="wrapper dashboard-wrapper">
        <div class="d-flex flex-wrap flex-xl-nowrap">
            {# Sidebar #}
                {% include 'backend/admin/sidebar.html.twig' %}
            {# EndSidebar #}

            <div class="page-content">
                    
                {# Header #}
                    {% include 'backend/admin/layouts/header.html.twig' %}
                {# EndHeader #}

                <main id="content" class="bg-gray-01">
                    <div class="px-3 px-lg-6 px-xxl-13 py-5 py-lg-10">
                        <div class="tab-content shadow-none p-0">
                            <div class="card-body py-4 py-md-0 px-0">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="card mb-6">
                                            <div class="card-body p-6">
                                                <h3 class="card-title mb-4 text-heading fs-22 lh-15">
                                                    Toutes les catégories
                                                </h3>
                                                <ol class="list-group">
                                                    {% for category in categories %}
                                                    <li class="list-group-item">
                                                        <a href="{{ path('app_category_edit', {id: category.id}) }}">{{ category.name }}</a>
                                                    </li>
                                                    {% endfor %}
                                                </ol>
                                                <a href="{{path('app_category_new')}}"class="btn btn-indigo mt-4">Nouvelle Catégorie</a>

                                            </div>
                                        </div>
                                    </div>                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

{% endblock %}